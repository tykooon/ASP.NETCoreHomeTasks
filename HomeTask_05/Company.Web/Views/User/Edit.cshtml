@model Company.Web.Models.UserEditModel;
@{
    ViewBag.Title = "Edit";
}

<div class="mainboard" style="--mw:800px;">

    <div class="d-flex gap-2 justify-content-between m-2 p-2">
        <h2 class="text-primary">Edit information about @Model?.FullName</h2>
    </div>

    <div class="mb-4">
        <form method="post" asp-action="Edit">

            <partial name="_UserEditFormPartial" />

            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Save</button>
                <a asp-action="List" class="btn btn-secondary">Return to list</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScripts"/>
}